<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cong_jh.whatupfi.CoverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="82dp"
                android:layout_height="65dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/school" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textClassName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61"
                android:gravity="center"
                android:text="현재 수업 이름"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textClassNum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="학수번호"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textProfName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="교수이름"
                android:textSize="17dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textStudentID"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="학번"
                    android:textSize="15dp"
                    android:layout_weight="0.95" />

                <TextView
                    android:id="@+id/textStudentName"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textStudentID"
                    android:layout_alignBottom="@+id/textStudentID"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="학생 이름"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6.98"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/btnSmart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="스마트 출석"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>